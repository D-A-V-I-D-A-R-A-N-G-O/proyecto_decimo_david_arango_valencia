CREATE TABLE Usuario (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nombre TEXT NOT NULL,
    email TEXT NOT NULL UNIQUE
);

-- Creación de la tabla TipoTarea
CREATE TABLE TipoTarea (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nombre TEXT NOT NULL
);

-- Creación de la tabla AreaMateria
CREATE TABLE AreaMateria (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nombre TEXT NOT NULL
);

-- Creación de la tabla Tarea
CREATE TABLE Tarea (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    descripcion TEXT NOT NULL,
    tipo_tarea_id INTEGER NOT NULL,
    area_materia_id INTEGER NOT NULL,
    fecha_entrega TEXT NOT NULL, -- Usamos TEXT para almacenar fechas en el formato 'YYYY-MM-DD'
    nivel_dificultad INTEGER, -- Puedes aplicar la verificación en la lógica de la aplicación
    tiempo_estimado REAL NOT NULL, -- Usamos REAL para valores decimales
    prioridad REAL, -- Este campo se puede calcular en la aplicación
    FOREIGN KEY (tipo_tarea_id) REFERENCES TipoTarea(id),
    FOREIGN KEY (area_materia_id) REFERENCES AreaMateria(id)
);

-- Creación de la tabla EncuestaDificultad
CREATE TABLE EncuestaDificultad (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    tarea_id INTEGER NOT NULL,
    usuario_id INTEGER NOT NULL,
    nivel_dificultad INTEGER, -- Puedes aplicar la verificación en la lógica de la aplicación
    FOREIGN KEY (tarea_id) REFERENCES Tarea(id),
    FOREIGN KEY (usuario_id) REFERENCES Usuario(id)
);
